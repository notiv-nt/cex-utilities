{
  "manifest_version": 3,
  "name": "OKX utilities",
  "description": "",
  "version": "1.2.0",
  "icons": {
    "512": "misc/icon_512.png"
  },
  "action": {
    "default_popup": "dist/popup.html"
  },
  "content_scripts": [
    { "matches": ["https://www.okx.com/trade-swap/*"], "js": ["dist/index.js"] },
    { "matches": ["https://www.okx.com/trade-spot/*"], "js": ["dist/index.js"] },
    { "matches": ["https://www.okx.com/trade-futures/*"], "js": ["dist/index.js"] },
    { "matches": ["https://www.okx.com/trade-margin/*"], "js": ["dist/index.js"] },
    { "matches": ["https://www.okx.com/*/trade-swap/*"], "js": ["dist/index.js"] },
    {
      "matches": ["https://www.okx.com/tradingview/static/fr-tv-chart*"],
      "all_frames": true,
      "js": ["static/tv-iframe.js"]
    },
    {
      "matches": ["https://www.okx.com/tradingview/static/en-tv-chart*"],
      "all_frames": true,
      "js": ["static/tv-iframe.js"]
    }
  ],
  "permissions": ["storage"],
  "web_accessible_resources": [
    {
      "resources": ["static/*"],
      "matches": ["https://www.okx.com/*"]
    }
  ]
}
